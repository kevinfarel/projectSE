<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#42f489"
    tools:context="com.example.kevinfarel.myapplication.Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:textSize="30dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textAlignment="center"
        android:id="@+id/etEmail"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAlignment="center"
        android:id="@+id/etPassword"
        android:layout_marginBottom="60dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login As User"
        android:gravity="center"
        android:id="@+id/btnLoginUser"
        android:onClick="CheckLoginUser"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login As Printer"
        android:gravity="center"
        android:id="@+id/btnLoginPrinter"
        android:onClick="CheckLoginPrinter"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haven't sign up yet? Sign Up here"
        android:id="@+id/BLogin"
        android:onClick="pindahRegister"/>
</LinearLayout>
